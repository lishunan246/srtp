<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>Servletcc</servlet-name>
        <servlet-class>com.lishunan.gpm.HelloWorldController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servletcc</servlet-name>
        <url-pattern>/ddd</url-pattern>
    </servlet-mapping>
    
    <servlet>
            <servlet-name>LoginServlet</servlet-name>
            <servlet-class>com.lishunan.gpm.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.lishunan.gpm.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CurrentUser</servlet-name>
        <servlet-class>com.lishunan.gpm.ReturnUserInfo</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CurrentUser</servlet-name>
        <url-pattern>/currentuser.do</url-pattern>
    </servlet-mapping>

</web-app>
